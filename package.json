{
  "name": "foretoken",
  "version": "1.0.0",
  "type": "module",
  "description": "parkrun finish token generator for when events run out of physical tokens",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,tsx,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\"",
    "generate:og-image": "tsx scripts/generate-og-image.ts",
    "generate:icons": "tsx scripts/generate-icons.ts",
    "generate:screenshot": "tsx scripts/generate-screenshot.ts",
    "prebuild": "pnpm run generate:icons"
  },
  "dependencies": {
    "html2canvas": "^1.4.1",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-barcode": "^1.6.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^15.0.7",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "@types/node": "^24.10.0",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.2",
    "tsx": "^4.20.6",
    "typescript": "^5.5.3",
    "vite": "^7.1.12"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  }
}
